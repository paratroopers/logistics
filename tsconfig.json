{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "outDir": "lib",
        "sourceMap": true,
        "jsx": "react",
        "allowJs": false,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "lib": [
            "es2015.promise", "dom", "es5", "scripthost",
            "es2015.core",
            "es2015.collection"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    }
}